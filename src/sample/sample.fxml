<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
          styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Button text="Connexion à la Raspberry Pi"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="3"
            onAction="#connectToRPI"/>

    <Label text="Compte à rebours:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"/>

    <TextField
            fx:id="timer_textfield"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            prefWidth="100"
            text="10"
            />

    <Button fx:id="launch_acq_button"
            text="Lancement de l'acquisition"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            GridPane.columnSpan="3"
            onAction="#launchAcq"/>

    <HBox spacing="10" alignment="BOTTOM_CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Label
                text="0"
                fx:id="timer_and_result_label"/>
    </HBox>


    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>
</GridPane>